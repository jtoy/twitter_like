<div class="panel panel-success">
	<div class="panel-heading">
		<h3 class="panel-title">Paid Plan</h3>
	</div>
	<div class="panel-body">
		<div class="the-price">
			<h1>$5</h1>
		</div>
		<table class="table">
			<tr>
				<td>One time delete of all Twitter favorites</td>
			</tr>
			<tr>
				<td>No email required</td>
			</tr>
		</table>
	</div>
	<div class="panel-footer">
    <form action="/will_pay" method="POST">
    	<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
    	<script
    	  src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    	  data-key="<%= Configurable[:stripe_public_key] %>"
    	  data-amount="500"
    	  data-image="/128x128.png">
    	</script>
    </form>
	</div><!-- /.panel-footer -->
</div><!-- /.panel panel-success -->
